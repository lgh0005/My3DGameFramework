{
    "version": 3,
    "configurePresets": 
    [
        {
            "name": "base",
            "hidden": true,
            "description": "Common parent for all presets (OS independent)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": 
            {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake"
            }
        },

        {
            "name": "windows-base",
            "hidden": true,
            "description": "Windows-specific settings (MSVC compiler)",
            "inherits": "base",
            "condition": 
            {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "architecture": 
            { 
                "value": "x64", 
                "strategy": "external" 
            },
          "cacheVariables": {
            "CMAKE_C_COMPILER": "cl.exe",
            "CMAKE_CXX_COMPILER": "cl.exe",
            "VCPKG_TARGET_TRIPLET": "x64-windows-static",
            "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>"
          }
        },

        {
            "name": "linux-base",
            "hidden": true,
            "description": "Linux-specific settings (GCC/Clang)",
            "inherits": "base",
            "condition": 
            {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "architecture": { "value": "x64", "strategy": "external" },
            "cacheVariables": 
            {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },

        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "description": "Debug build (Windows/Linux auto-detection)",
            "inherits": "windows-base",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "description": "Release build (Optimized)",
            "inherits": "windows-base",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
        }
    ]
}
